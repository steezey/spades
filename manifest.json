{
  "manifest_version": 2,

  "name": "Haggle",
  "description": "Bookmark links to haggle.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "page.html",
    "default_title": "Click here to post this page!"
  },
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "permissions": [
    "activeTab",
    "http://*/",
    "storage",
    "tabs"
  ]
}